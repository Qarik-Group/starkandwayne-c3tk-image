#!/usr/bin/env bash

[[ -z "${DEBUG}" ]] || set -x

# https://plugins.cloudfoundry.org/
plugins=(
  Targets
  app-autoscaler-plugin
  app-metrics
  bg-restage
  cf-download
  cf-rolling-restart
  conduit
  copyenv
  docker-usage
  fastpush
  java
  metric-registrar
  mysql-plugin
  push-with-vault
  route-lookup
  started-apps
  sync
  top
  wildcard_plugin
  "Download Droplet"
)
# doctor ?
# open ? 
set -x
if ! [[ -s ~/.cf/plugins/config.json ]]
then
  mkdir -p ~/.cf/plugins 
  echo '{}' > ~/.cf/plugins/config.json
fi

installed=()
while read -r name
do installed+=(${name})
done <<< $(cat ~/.cf/plugins/config.json | jq -r '.Plugins[].Name')

for plugin in "${plugins[@]}"
do 
  IFS="|"
  if ! [[ "${IFS}${installed[*]}${IFS}" =~ "${IFS}${plugin}${IFS}" ]]
  then
    echo -e "Installing Plugin ${plugin}..."
    cf install-plugin -r CF-Community "${plugin}"
  fi
  unset IFS # or set back to original IFS if previously set
done

exec /opt/bin/cf "${@}"

exit 0
